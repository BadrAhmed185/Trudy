@model Trudy.Models.ViewModels.DecryptResultViewModel

@{
    ViewData["Title"] = "📄 Decrypted File";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <h2 class="caption-top" style="color : brown; margin-bottom : 22px;">here is your decrypted text using the @TempData["Algorithm"] Algorithm</h2>


            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-gradient text-white" style="background: linear-gradient(90deg, #0d6efd 0%, #6610f2 100%);">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0"><i class="bi bi-shield-lock-fill me-2"></i>@ViewData["Title"]</h4>
                        <span class="badge bg-light text-dark">RSA</span>
                    </div>
                </div>

                <div class="card-body">
                    <div class="mb-3">
                        <i class="bi bi-file-earmark-text-fill text-primary me-2"></i>
                        <strong>File:</strong> @Model.FileName
                    </div>

                    <div class="mb-3">
                        <i class="bi bi-calendar-event-fill text-success me-2"></i>
                        <strong>Created:</strong> @Model.CreatedDate.ToString("yyyy-MM-dd HH:mm")
                    </div>

                    <hr />

                    <h5 class="text-secondary mb-3"><i class="bi bi-unlock-fill me-2"></i>Decrypted Content</h5>
                    <div class="border rounded-3 p-3 bg-light text-dark" style="white-space: pre-wrap; min-height: 150px;">
                        @Model.DecryptedText
                    </div>
                </div>

                <div class="card-footer text-end bg-transparent border-0">
                    <a asp-controller"@TempData["Controller"]" asp-action="MyEncryptedFiles" class="btn btn-outline-dark w-30">
                        <i class="bi bi-arrow-left-circle me-1"></i> Back to My Files
                    </a>
                </div>
            </div>

        </div>
    </div>
</div>
